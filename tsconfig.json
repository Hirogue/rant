{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@rant/logger": [
        "libs/logger/src"
      ],
      "@rant/logger/*": [
        "libs/logger/src/*"
      ],
      "@rant/config": [
        "libs/config/src"
      ],
      "@rant/config/*": [
        "libs/config/src/*"
      ],
      "@rant/collection": [
        "libs/collection/src"
      ],
      "@rant/collection/*": [
        "libs/collection/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}